<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/reg_bg">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/app_name_short"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp" />
    <EditText
        android:id="@+id/RegUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:hint="@string/user_name"
        android:background="@android:color/white"
        android:textColorHint="@android:color/black"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/RegEmail"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/RegEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@android:color/white"
        android:hint="@string/prompt_email"
        android:textColorHint="@android:color/black"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        android:layout_below="@+id/RegUsername"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">
    </EditText>
    <EditText
        android:id="@+id/RegPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/phone"
        android:background="@android:color/white"
        android:textColorHint="@android:color/black"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:inputType="phone"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/RegEmail"
        android:layout_alignStart="@+id/RegPass"/>
    <EditText
        android:id="@+id/RegPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_password"
        android:background="@android:color/white"
        android:textColorHint="@android:color/black"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:layout_below="@+id/RegPhone"
        android:layout_alignStart="@+id/RegPass2"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/RegPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="@string/reenter_password"
        android:textColorHint="@android:color/black"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:layout_below="@+id/RegPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:text="@string/action_register_short"
        android:textSize="30sp"
        android:padding="2dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>